{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "nodenext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // absolute imports
    "baseUrl": ".",
    "paths": {
      "schema-mongo": ["src/index.ts"],
      "schema-mongo/adapters/zod": ["src/adapters/zod.ts"],
    }
  },
   "exclude": [
    "coverage",
    "vitest.config.ts",
    "eslint.config.mjs",
    "scripts",
    "node_modules",
    "dist",
    "doc",
    "test",
    "tsconfig.build.json",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
  ]

}